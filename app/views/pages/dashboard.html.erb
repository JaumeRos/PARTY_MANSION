<div class="container text-center">
  <div class="set-footer">
    <h1 class="my-3">Dashboard</h1>
    <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">My mansions</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">My booking requests</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">My bookings</a>
      </li>
    </ul>

    <div class="row justify-content-center">
      <div class="col-8">
        <div class="tab-content" id="my-tabContent">
          <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="mansion-list w-100 h-100">
              <% @user_mansions.each do |mansion| %>
                <%= link_to mansion_path(mansion) do  %>
                  <div class="card-product border-card mb-3">
                      <%= cl_image_tag mansion.photos.first.key %>
                    <div class="card-trip-infos px-3 mt-2 d-flex justify-content-between">
                      <h2> <%= mansion.title %></h2>
                      <div class="d-flex my-2">
                        <p class="pr-3 dashboard-details"><i class="fas fa-user-friends mr-1"></i><%= mansion.capacity %></p>
                        <p class="dashboard-details"><i class="fas fa-euro-sign ml-3 mr-1"></i><%= mansion.price %></p>
                      </div>

                      <div class="d-flex align-items-center notification-actions mt-2 ">
                           <h6 class="actions"><i class="fas fa-pencil-alt"></i><%= link_to "Edit ", edit_mansion_path(mansion), class: "link"  %></h6>
                           <h6 class="actions"><i class="far fa-trash-alt"></i><%= link_to "Delete", mansion_path(mansion),method: :delete, class: "link"  %></h6>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>


          <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
            02 - MY BOOKING REQUESTS CONTENT
          </div>

          <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
          03 - MY BOOKINGS CONTENT
          </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>



