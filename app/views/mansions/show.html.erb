<div class="container">
  <div class="row justify-content-center">
    <div class="d-flex justify-content-center">
      <div class="col-8">
       <div class="show-banner mb-3" style="background-image: url(' <%= cl_image_path @mansion.photo.key, crop: :fill %> ');"></div>
        <div class="bg-white p-3 mb-3">
          <h1><%= @mansion.title %></h1>
          <p><%= @mansion.address %></p>
        </div>
        <div class="bg-white p-3">
          <p><%= @mansion.description %></p>
        </div>
                <div class="my-3 bg-white p-3">
          <p>Details of the Mansion:</p>
          <div class="d-flex">
            <p class="mb-0"><i class="fas fa-user-friends mr-1"></i><%= @mansion.capacity %></p>
            <p class="mb-0"><i class="fas fa-euro-sign ml-3 mr-1"></i><%= @mansion.price %></p>
          </div>
        </div>

      </div>
      <div class="col-4">
        <div class="mb-3 bg-white p-3 booking-form">
          <p>Book this place!</p>
            <%= simple_form_for [ @mansion, @booking ] do |f| %>
              <%= f.input :start_date %>
              <%= f.input :end_date %>
              <%= f.submit "Book", :class => "btn btn-primary"  %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
