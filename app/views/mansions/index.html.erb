<div class="container">
  <H2>These are the mansions</H2>
  <div class="d-flex index-container">
    <div class="mansion-list w-50 h-100">
      <% @mansions.each do |mansion| %>
        <div class="card-product border-card mb-3">
          <% if mansion.photo.attached? %>
          <%= cl_image_tag mansion.photo.key, class: "h-100"  %>
          <% end %>
          <div class="card-trip-infos px-3">
            <div>
              <h2> <%= mansion.title %></h2>
              <p> <%= mansion.description %> </p>
            </div>
            <h2 class="card-trip-pricing">Â£ <%= mansion.price %></h2>
          </div>
        </div>
      <% end %>
    </div>

    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"> 
    </div>

  </div>
</div>




