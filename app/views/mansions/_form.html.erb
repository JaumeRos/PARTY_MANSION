<div class="container mt-4 mb-5">
  <div class="form mt-3">
    <h1>Add new Mansion</h1>
    <%= simple_form_for(@mansion) do |f| %>
      <%= f.input :title %>
      <%= f.input :address %>
      <%= f.input :price %>
      <%= f.input :capacity %>
      <%= f.input :description %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.submit "Submit", :class => "btn btn-primary"  %>
    <% end %>
  </div>
</div>




