<div class="container">
  <h1>Add new Mansion</h1>
  <%= simple_form_for(@mansion) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :price %>
    <%= f.input :capacity %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Add Mansion", :class => "btn btn-primary"  %>
  <% end %>
</div>

